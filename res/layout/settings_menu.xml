<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@drawable/full_bg3">
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:minHeight="60dp"
		android:id="@+id/settingsLabel"
		android:background="@drawable/settings_menu_label" android:layout_marginBottom="20dp"></TextView>
	<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textSize="30sp"
			android:textStyle="bold"
			android:id="@+id/settingsMenuSound"
			android:padding="10dp"
			android:text="SOUND"
			android:layout_width="wrap_content"
			android:minWidth="250dp" android:textColor="#00CC66"></TextView>
		<ToggleButton
			android:id="@+id/settingsMenuSoundButton"
			android:layout_toRightOf="@+id/settingsMenuSound"
			android:layout_height="wrap_content"
			android:text="@+id/ToggleButton01"
			android:layout_width="wrap_content"
			android:width="50dp"
			android:maxWidth="50dp"></ToggleButton>
		<TextView
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textSize="30sp"
			android:textStyle="bold"
			android:id="@+id/settingsMenuVibration"
			android:layout_below="@+id/settingsMenuSound"
			android:text="VIBRATION"
			android:layout_width="wrap_content"
			android:minWidth="250dp"
			android:padding="10dp" android:textColor="#00CC66"></TextView>
		<ToggleButton
			android:id="@+id/settingsMenuVibrationButton"
			android:layout_toRightOf="@+id/settingsMenuVibration"
			android:layout_below="@+id/settingsMenuSound"
			android:layout_height="wrap_content"
			android:text="@+id/ToggleButton02"
			android:layout_width="wrap_content"
			android:width="50dp"
			android:maxWidth="50dp"></ToggleButton>
	</RelativeLayout>
	
	<LinearLayout
		android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:layout_height="fill_parent">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/settingsMenuPlayers"
			android:text="PLAYERS"
			android:textColor="#FFF"
			android:textSize="30sp"
			android:textStyle="bold"
			android:padding="10dp"
			android:shadowDx="1.2"
			android:shadowColor="#333"
			android:gravity="center_vertical"
			android:drawableLeft="@drawable/ic_menu_players"></TextView>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textSize="30sp"
			android:textStyle="bold"
			android:padding="10dp"
			android:textColor="#FFF"
			android:text="HINTS"
			android:shadowColor="#333"
			android:shadowDx="1.2"
			android:drawableLeft="@drawable/ic_menu_hints"
			android:id="@+id/settingsMenuHints"></TextView>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textSize="30sp"
			android:textStyle="bold"
			android:padding="10dp"
			android:textColor="#FFF"
			android:text="ABOUT"
			android:shadowColor="#333"
			android:shadowDx="1.2"
			android:drawableLeft="@drawable/ic_menu_tag"
			android:id="@+id/settingsMenuAbout"></TextView>
	</LinearLayout>
</LinearLayout>