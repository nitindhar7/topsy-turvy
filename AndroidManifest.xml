<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.topsyturvy"
	android:versionCode="1"
	android:versionName="1.0">
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:debuggable="true">
		<activity
			android:name=".SplashScreen"
			android:screenOrientation="portrait">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".TopsyTurvy"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".SinglePlayer"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name=".Lobby"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name=".Settings"
			android:screenOrientation="portrait"></activity>
		<activity
			android:screenOrientation="portrait"
			android:name=".Players"></activity>
		<activity
			android:screenOrientation="portrait"
			android:name=".NewPlayer"></activity>
		<activity
			android:screenOrientation="portrait"
			android:name=".EditPlayer"></activity>
		<activity
			android:screenOrientation="portrait"
			android:name=".Score"></activity>
		<activity
			android:name=".Hints"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name=".PlayerInfo"
			android:screenOrientation="portrait"></activity>
		<activity
			android:name=".MultiPlayer"
			android:screenOrientation="portrait"></activity>
	</application>
	<uses-sdk
		android:minSdkVersion="7" />
	<uses-permission
		android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
	<uses-permission
		android:name="android.permission.VIBRATE" />
	<uses-permission
		android:name="android.permission.BLUETOOTH" />
	<uses-permission
		android:name="android.permission.BLUETOOTH_ADMIN" />
</manifest>